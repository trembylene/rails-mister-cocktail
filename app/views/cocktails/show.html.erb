<h3 class="text-center">
  <%= @cocktail.name %>
  <small>
    <%= link_to "", new_cocktail_dose_path(@cocktail), :class => "fas fas fa-flask fa-sm" %>
    <%= link_to "", cocktail_path(@cocktail),
      :class => "fas fa-trash-alt fa-xs",
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </small>
</h3>

<% if @cocktail.doses %>
  <% @cocktail.doses.each do |dose| %>
    <p>
      <%= "#{dose.amount} #{dose.ingredient.name}" %>
      <%= link_to "", cocktail_dose_path(dose, id: dose.id),
      :class => "fas fa-trash-alt fa-xs",
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </p>
  <% end %>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %></p>
  <% end %>
<% else %>
  <p>No details yet, please add a new dose of ingredient</p>
<% end %>

<%= link_to "Back", cocktails_path %>
