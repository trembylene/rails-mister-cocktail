<%= simple_form_for [@cocktail] do |f| %>
  <div class="form-group col-sm-8 col-sm-offset-2">
    <div class="form-inputs">
      <%= f.input :name, class: "form-control" %>
    </div>
    <div class="form-actions">
      <%= f.submit "submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
